<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:backgroundTint="@android:color/white"
    app:strokeColor="#66EDEF"
    app:strokeWidth="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Title: Now constrained to parent end for full width -->
        <TextView
            android:id="@+id/setUpInCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Subtitle: Now constrained to parent end for full width -->
        <TextView
            android:id="@+id/punchlineInCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setUpInCard"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Modify Button -->
        <Button
            android:id="@+id/modifyJokeButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify"
            android:textColor="#FF9800"
            app:layout_constraintTop_toBottomOf="@id/punchlineInCard"
            app:layout_constraintEnd_toStartOf="@+id/deleteJokeButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>

        <!-- Delete Button -->
        <Button
            android:id="@+id/deleteJokeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:backgroundTint="#000000"
            android:drawableEnd="@drawable/baseline_delete_forever_24"
            android:drawablePadding="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:elevation="4dp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/punchlineInCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>